{
  "name": "ts-cli-boilerplate",
  "version": "0.10.0",
  "description": "TypeScript CLI boilerplate",
  "author": "Lycolia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lycolia/ts-cli-boilerplate"
  },
  "bin": {
    "your_command_name_here": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "dev": "node -r ts-node/register --inspect-brk ./src/index.ts",
    "type-check": "tsc --noEmit && eslint .",
    "build": "npm run build-ts && npm run type-check",
    "build-ts": "tsc",
    "test": "jest --watch",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.2",
    "jest": "^27.3.1",
    "jest-watch-typeahead": "^1.0.0",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.4.4"
  }
}
