{
  "name": "ts-cli-boilerplate",
  "version": "0.9.1",
  "description": "TypeScript CLI boilerplate",
  "author": "Lycolia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lycolia/ts-cli-boilerplate"
  },
  "bin": {
    "your_command_name_here": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "dev": "node -r ts-node/register --inspect-brk ./src/index.ts",
    "lint": "tsc --noEmit && eslint --fix-dry-run",
    "build": "tsc",
    "test": "jest --watch",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.2",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.6",
    "jest-watch-typeahead": "^0.6.4",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
